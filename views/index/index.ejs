<!doctype html>
<html lang="zh-CN">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" />
  <meta name="renderer" content="webkit" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />



  <script src="./lib/mdui.global.js"></script>
  <link rel="stylesheet" href="./lib/mdui.css">
  <script src="./lib/axios.min.js"></script>
  <script src="./lib/particles.min.js"></script>
  <script src="./lib/pinyin-pro.min.js"></script>


  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Two+Tone" rel="stylesheet">


  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- <link rel="shortcut icon" href="../resources/logo.ico"> -->

  <link rel="manifest" href="manifest.json" />

  <title>DLS Fucker</title>
</head>

<body style="margin: 0;">

  <mdui-layout style="height: 100vh;background-color: rgb(var(--mdui-color-background));">

    <mdui-top-app-bar scroll-behavior="elevate" scroll-target="#main-content-area" style="align-items: center;">
      <mdui-top-app-bar-title>

        <div style="font-family: 'YUYUKO SCRIPT';font-size: 2.5rem;">&nbsp;DLS FUCKER</div>

      </mdui-top-app-bar-title>
      <div id="clock" style="margin-right: 1rem;opacity: 0.5;font-size: large;"></div>
    </mdui-top-app-bar>

    <mdui-layout-item>
      <mdui-navigation-rail divider id="navi-rail">

        <mdui-navigation-rail-item icon="account_tree--outlined" id="rail-fucker">
          Fucker
        </mdui-navigation-rail-item>

        <mdui-navigation-rail-item icon="key--outlined" id="rail-cookie">
          Auth
        </mdui-navigation-rail-item>

        <mdui-navigation-rail-item icon="table--outlined" id="rail-table">
          Table
        </mdui-navigation-rail-item>

        <mdui-navigation-rail-item icon="search--outlined" id="rail-query">
          Query
        </mdui-navigation-rail-item>

        <mdui-navigation-rail-item icon="low_priority--outlined" id="rail-arrange">
          Arrange
        </mdui-navigation-rail-item>

        <mdui-navigation-rail-item icon="settings--outlined" id="rail-settings">
          Settings
        </mdui-navigation-rail-item>

        <mdui-navigation-rail-item icon="info--outlined" id="rail-about">
          About
        </mdui-navigation-rail-item>

        <!-- 深色模式切换 -->
        <mdui-button-icon slot="bottom" id="buttonDarkMode" icon="dark_mode">
        </mdui-button-icon>

        <!-- 设置配色 -->
        <mdui-button-icon slot="bottom" id="buttonColor" icon="color_lens">

        </mdui-button-icon>
        <input type="color" id="colorPicker" hidden>

      </mdui-navigation-rail>
    </mdui-layout-item>


    <mdui-layout-main id="main-content-area">
      <div id="fucker-content" class="panel-content">
        <%- include('./parts/fucker.ejs') %>
      </div>

      <div id="cookie-content" class="panel-content" hidden>
        <%- include('./parts/cookie.ejs') %>
      </div>


      <div id="table-content" class="panel-content" hidden>
        <%- include('./parts/table.ejs') %>
      </div>

      <div id="query-content" class="panel-content" hidden>
        <%- include('./parts/query.ejs') %>
      </div>

      <div id="arrange-content" class="panel-content" hidden>
        <%- include('./parts/arrange.ejs') %>
      </div>

      <div id="settings-content" class="panel-content" hidden>
        <%- include('./parts/settings.ejs') %>
      </div>


      <div id="about-content" class="panel-content" hidden>
        <%- include('./parts/about.ejs') %>
      </div>

      <%- include('./dialogs.ejs') %>

      <mdui-dialog headline="选择要添加的课程..." id="dialog-target-add">
        <div id="dialog-target-add-title" style="margin-bottom: 1rem;opacity: 0.75;font-size: large;">

        </div>
        <table class="mdui-table" style="margin: 0.5rem;width: 60rem;">
          <thead>
            <tr>
              <th>选课序号</th>
              <th>最大/申请/已录</th>
              <th>任课教师</th>
              <th>上课周次</th>
              <th>上课时间</th>
              <th>上课地点</th>
              <th>信息</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody id="target-add-tbody">

          </tbody>

        </table>

        <mdui-button slot="action" variant="text" onclick="dialogTargetAddClose()">取消</mdui-button>

        <script>
          // 弹出窗口样式注入
          let style = document.createElement('style')
          style.innerHTML = `
              .panel {max-width: 90rem !important;}
              .body::-webkit-scrollbar {width: 6px;height: 6px;}
              .body::-webkit-scrollbar-track {background-color: #8888880F;}
              .body::-webkit-scrollbar-thumb {background-color: #88888880;border-radius: 4px;}
              .body::-webkit-scrollbar-thumb:hover {background-color: #555;}
              `
          document.getElementById("dialog-target-add").shadowRoot.appendChild(style)
        </script>

      </mdui-dialog>


    </mdui-layout-main>

  </mdui-layout>

  <link rel="stylesheet" href="css/main.css" />

  <script src="js/display.js"></script>
  <script src="js/api.js"></script>
  <script src="js/main.js"></script>
  <script src="js/query.js"></script>
  <script src="js/arrange.js"></script>
  <script src="js/misc.js"></script>
  <script src="js/darkside.js"></script>


  <script>
    if ("serviceWorker" in navigator) {
      window.addEventListener("load", function() {
        navigator.serviceWorker
          .register("js/service-worker.js")
          .then(res => console.log("service worker registered"))
          .catch(err => console.log("service worker not registered", err))
      })
    }
  </script>

</body>

</html>