    <mdui-icon name="table" style="font-size: 2rem;margin-right: 1rem;"></mdui-icon>
    <div style="font-size: x-large;font-weight: bold;">Table</div>
  </div>
  <div style="margin-bottom: 1rem;opacity: 0.75;">课程表。</div>
  <div style="display: flex;align-items: center;margin-bottom: 1rem;">
    <mdui-select id="input-table-term" class="semester-select" variant="outlined" value="item-1" style="width: 10rem;">
    </mdui-select>

    <mdui-text-field id="input-table-stdudent-id" style="width: 15rem;margin-left:1rem;" clearable class="darkside" label="学号（Darkside）" value=""></mdui-text-field>

